@using CarInsurance.ViewModels
@model List<QuoteVM>
@{
    ViewBag.Title = "Index";
}

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-8 col-ld-6 mx-auto shadow">
        <div class="card-header text-center">
            <h3 class="m-0">Quotes Given</h3>
        </div>
        <div class="card-body">
            <div class="row m-0">
                <div class="col-3">
                    <h5>First Name</h5>
                </div>
                <div class="col-3">
                    <h5>Last Name</h5>
                </div>
                <div class="col-4">
                    <h5>Email Address</h5>
                </div>
                <div class="col-2">
                    <h5>Quote</h5>
                </div>
            </div>

            @foreach (var quote in Model)
            {
                <input type="hidden" name="Id" value="@quote.Id" />
                <div class="row mb-3">
                    <div class="row col-12 ml-2">
                        <div class="col-3">
                            @quote.FirstName
                        </div>
                        <div class="col-3">
                            @quote.LastName
                        </div>
                        <div class="col-4">
                            @quote.EmailAddress
                        </div>
                        <div class="col-2">
                            @quote.Quote.ToString("C")
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

